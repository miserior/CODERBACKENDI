<div class="row sectionb">
                <div>
<form id="formNewProduct" class="p-4 border rounded shadow-sm bg-light">
  <h4 class="mb-4 text-center">Agregar Nuevo Producto</h4>

  <div class="mb-3">
    <input type="text" class="form-control" name="title" placeholder="Ingrese el título" required>
  </div>

  <div class="mb-3">
    <textarea class="form-control" name="description" placeholder="Ingrese la descripción" required rows="3"></textarea>
  </div>

  <div class="mb-3">
    <input type="text" class="form-control" name="code" placeholder="Ingrese el código" required>
  </div>

  <div class="mb-3">
    <input type="number" class="form-control" name="price" placeholder="Ingrese el precio" required>
  </div>

  <div class="mb-3">
    <input type="number" class="form-control" name="stock" placeholder="Ingrese el stock" required>
  </div>

  <div class="mb-3">
    <input type="text" class="form-control" name="category" placeholder="Ingrese la categoría" required>
  </div>

  <button type="submit" class="btn btn-primary w-100 mt-3">Enviar</button>
</form>
                </div>

</div>



<div class="row sectionc">
  <div>
    <h2>Productos destacados con Real Time</h2>
    <p>Experiencia y compromiso en cada servicio.</p>
  </div>
  <section id="productsList" class="row justify-content-center">
    {{#each products}}

      <div class="card sectionc-cards col-lg-3 col-md-2 col-sm-12">
        <div class="card-body">
          <h3 class="card-title">{{this.title}}</h3>
          <h4 class="card-title">{{this.category}}</h4>
          <p class="card-text">{{this.price}} USD</p>
          <button type="button" class="btn btn-danger delete-product-btn" data-id={{this.id}}>Eliminar</button>
        </div>
      </div>
    {{/each}}

  </section>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>