<div class="row sectionb">
    <div>
        <form id="formNewProduct" class="p-4 border rounded shadow-sm bg-light">
            <h2 class="mb-4 text-center">Agregar Nuevo Producto</h2>

            <div class="mb-3">
                <label for="productTitle" class="form-label">Título</label>
                <input type="text" class="form-control" id="productTitle" name="title" placeholder="Ingrese el título"
                    required>
            </div>

            <div class="mb-3">
                <label for="productDescription" class="form-label">Descripción</label>
                <textarea class="form-control" id="productDescription" name="description"
                    placeholder="Ingrese la descripción" required rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="productCode" class="form-label">Código</label>
                <input type="text" class="form-control" id="productCode" name="code" placeholder="Ingrese el código"
                    required>
            </div>

            <div class="mb-3">
                <label for="productPrice" class="form-label">Precio</label>
                <input type="number" class="form-control" id="productPrice" name="price" placeholder="Ingrese el precio"
                    required min="0" step="0.01">
            </div>

            <div class="mb-3">
                <label for="productStock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="productStock" name="stock" placeholder="Ingrese el stock"
                    required min="0">
            </div>

            <div class="mb-3">
                <label for="productCategory" class="form-label">Categoría</label>
                <input type="text" class="form-control" id="productCategory" name="category"
                    placeholder="Ingrese la categoría" required>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Enviar</button>
        </form>
    </div>

</div>


<div class="row sectionc">
    <div>
        <h2>Productos destacados con Real Time</h2>
        <p>Experiencia y compromiso en cada servicio.</p>
    </div>
    <section id="productsList" class="row justify-content-center">
        {{#each products}}

        <div class="card sectionc-cards col-lg-3 col-md-2 col-sm-12">
            <div class="card-body">
                <h3 class="card-title">{{this.title}}</h3>
                <h4 class="card-title">{{this.category}}</h4>
                <p class="card-text">{{this.price}} USD</p>
                <button type="button" class="btn btn-danger delete-product-btn" data-id={{this.id}}>Eliminar</button>
            </div>
        </div>
        {{/each}}

    </section>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>